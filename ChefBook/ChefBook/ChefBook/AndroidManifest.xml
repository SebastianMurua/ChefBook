            android:name="com.chefbook.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.chefbook.Secundario"
            android:label="@string/title_activity_secundario" >
        </activity>
        <activity
            android:name="com.chefbook.Entrada"
            android:label="@string/title_activity_entrada" >
        </activity>
        <activity
            android:name="com.chefbook.Salsas"
            android:label="@string/title_activity_salsas" >
        </activity>
        <activity
            android:name="com.chefbook.Postres"
            android:label="@string/title_activity_postres" >
        </activity>
    </application>

</manifest>
